@page "/projects"
@inherits ProjectsBase

<div class="container">
    <div class="row pt-5">
        <div class="text-center col-12">
            <h3 class="text-uppercase border-bottom mb-4">List of projects</h3>
        </div>
    </div>

    <div class="input-group">
        <label for="txtSearch" class="form-label">Search by title</label>
        <input type="text" class="form-control m-3" @bind-value="SearchTerm" placeholder="Search project by title"/>
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit" @onclick="HandleSearchFilter">Search</button>
        </div>
    </div>

    <div class="row g-3">
        @if (projects.Any())
        {
            @foreach (var info in projects)
            {
                <div class="col-12 col-md-6 col-lg-6 col-sm-6">
                    <div class="card">
                        <img src="@info.imgUrl" class="card-img-top" alt="Card Image" />
                        <div class="card-body">
                            <h5 class="card-title text-center">@info.title</h5>
                            <p class="card-text mb-4">@info.description</p>
                            <div class="text-center">
                                <a class="card-link btn btn-primary" target="_blank" rel="noopener noreferrer" href="@info.gameLink">Link to game
                                </a>
                                <a class="card-link btn btn-primary" target="_blank" rel="noopener noreferrer" href="@info.sourceCodeLink">Source code</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No results found from your search query :(</p>
        }
    </div>
</div>